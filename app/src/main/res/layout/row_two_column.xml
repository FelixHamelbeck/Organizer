<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:id="@+id/RowTwoColumn_TV_Left"
        style="@style/Detail_Text_Data"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Left"
        app:layout_constraintHorizontal_weight="5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/RowTwoColumn_TV_Right"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintHorizontal_bias="1"
        />

    <TextView
        android:id="@+id/RowTwoColumn_TV_Right"
        style="@style/Detail_Text_Data"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Right"
        app:layout_constraintHorizontal_weight="5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/RowTwoColumn_TV_Left"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintHorizontal_bias="0"
        />


</androidx.constraintlayout.widget.ConstraintLayout>